											<SplineDoubleKeyFrame KeyTime="0"
																  Value="-122"
																  KeySpline="0.13,0.21,0.1,0.7" />
											<SplineDoubleKeyFrame KeyTime="0:0:0.433"
																  Value="-2"
																  KeySpline="0.02,0.33,0.38,0.77" />
