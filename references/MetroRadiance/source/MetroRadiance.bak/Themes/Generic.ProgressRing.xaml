										</DoubleAnimationUsingKeyFrames>
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="E4R"
																	   BeginTime="00:00:00.501"
																	   Storyboard.TargetProperty="Angle">
											<SplineDoubleKeyFrame KeyTime="0"
																  Value="-128"
