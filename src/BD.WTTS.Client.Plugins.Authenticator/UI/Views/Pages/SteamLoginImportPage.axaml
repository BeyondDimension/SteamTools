        <spp:StepperItem Index="1" Title="邮箱验证码">
            <Grid
                Margin="10"
                MinHeight="300"
                MinWidth="600">
                <StackPanel Margin="0,50,0,0" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.EmailCode, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                    <TextBox
                        HorizontalContentAlignment="Center"
                        MaxWidth="200"
                        Text="{Binding EmailAuthText}"
                        Watermark="{ReflectionBinding Path=Res.EmailCode,
                                                      Mode=OneWay,
                                                      Source={x:Static s:ResourceService.Current}}" />
                </StackPanel>
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="10,0"
                        Text="{Binding EmailDomainText}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="10,0"
                        Text="{ReflectionBinding Path=Res.LocalAuth_EmailCodeTip,
                                                 Mode=OneWay,
                                                 Source={x:Static s:ResourceService.Current}}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                    <Button
                        Command="{ReflectionBinding LoginSteamImport}"
                        Content="{ReflectionBinding Path=Res.Continue,
                                                    Mode=OneWay,
                                                    Source={x:Static s:ResourceService.Current}}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        MinWidth="280" />
                </StackPanel>
            </Grid>
        </spp:StepperItem>
        <spp:StepperItem Index="2" Title="绑定手机号">
            <Grid
                Margin="10"
                MinHeight="300"
                MinWidth="600">
                <!--  <TextBlock  -->
                <!--  HorizontalAlignment="Center"  -->
                <!--  Margin="0,10,0,0"  -->
                <!--  Text="请输入您需要绑定的手机号"  -->
                <!--  VerticalAlignment="Top" />  -->
                <StackPanel Margin="0,50,0,0" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.User_Phone, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                    <TextBox
                        HorizontalContentAlignment="Center"
                        MaxWidth="200"
                        Text="{Binding PhoneNumberText}"
                        Watermark="123-4567-8910" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"
                        Text="请在收到邮件后，点击邮件内的「添加手机号码」进行确认后，再点击继续按钮。"
                        VerticalAlignment="Bottom" />
                    <Button
                        Command="{ReflectionBinding LoginSteamImport}"
                        Content="{ReflectionBinding Path=Res.Continue,
                                                    Mode=OneWay,
                                                    Source={x:Static s:ResourceService.Current}}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        MinWidth="280" />
                </StackPanel>
            </Grid>
        </spp:StepperItem>
        <spp:StepperItem Index="3" Title="手机验证码">
            <Grid
                Margin="10"
                MinHeight="300"
                MinWidth="600">
                <StackPanel Margin="0,50,0,0" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.RecoveryCode, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                    <!--  恢复代码  -->
                    <TextBox
                        IsReadOnly="True"
                        MaxWidth="200"
                        Text="{Binding RevocationCodeText, Mode=OneWay}" />
                    <TextBox
                        HorizontalContentAlignment="Center"
                        MaxWidth="200"
                        Text="{Binding PhoneCodeText}"
                        Watermark="{ReflectionBinding Path=Res.SMSCode,
                                                      Mode=OneWay,
                                                      Source={x:Static s:ResourceService.Current}}" />
                    <CheckBox
                        Content="{ReflectionBinding Path=Res.RecoveryCode_Remember,
                                                    Mode=OneWay,
                                                    Source={x:Static s:ResourceService.Current}}"
                        HorizontalAlignment="Center"
                        MinWidth="200" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="10,0"
                        Text="{ReflectionBinding Path=Res.LocalAuth_SMSCodeTip,
                                                 Mode=OneWay,
                                                 Source={x:Static s:ResourceService.Current}}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                    <Button
                        Command="{ReflectionBinding LoginSteamImport}"
                        Content="{ReflectionBinding Path=Res.Continue,
                                                    Mode=OneWay,
                                                    Source={x:Static s:ResourceService.Current}}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        MinWidth="280" />
                </StackPanel>
            </Grid>
        </spp:StepperItem>
        <spp:StepperItem Index="4" Title="完成">
            <Grid
                Margin="10"
                MinHeight="300"
                MinWidth="600">
                <TextBlock
                    HorizontalAlignment="Center"
                    Margin="0,50,0,0"
                    MaxWidth="300"
                    Text="{ReflectionBinding Path=Res.LocalAuth_SteamUserImportSuccess,
                                             Mode=OneWay,
                                             Source={x:Static s:ResourceService.Current}}"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    VerticalAlignment="Top" />
                <!--  <StackPanel  -->
                <!--  HorizontalAlignment="Center"  -->
                <!--  Spacing="10"  -->
                <!--  VerticalAlignment="Bottom">  -->
                <!--     ~1~ <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.RecoveryCode, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" /> @1@ -->
                <!--  ~1~  <TextBox  @1@  -->
                <!--  ~1~  IsReadOnly="True"  @1@  -->
                <!--  ~1~  MaxWidth="200"  @1@  -->
                <!--  ~1~  Text="{Binding RevocationCodeText, Mode=OneWay}" />  @1@  -->
                <!-- </StackPanel> -->
                <Button
                    Command="{ReflectionBinding Reset}"
                    Content="{ReflectionBinding Path=Res.Continue,
                                                Mode=OneWay,
                                                Source={x:Static s:ResourceService.Current}}"
                    HorizontalAlignment="Center"
                    MinWidth="280"
                    VerticalAlignment="Bottom" />
            </Grid>
        </spp:StepperItem>
    </spp:Stepper>
</UserControl>
