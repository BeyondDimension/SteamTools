        <spp:ContentLoader
            IsLoading="{ReflectionBinding Source={x:Static s:SteamConnectService.Current},
                                          Path=IsLoadingGameList,
                                          Mode=OneWay}"
            IsShowNoResultText="{Binding IsSteamAppsEmpty}"
            NoResultMessage="{ReflectionBinding Path=Res.GameList_IsEmpty,
                                                Mode=OneWay,
                                                Source={x:Static s:ResourceService.Current}}">
            <spp:ContentLoader.GestureRecognizers>
                <ScrollGestureRecognizer CanHorizontallyScroll="True" CanVerticallyScroll="True" />
            </spp:ContentLoader.GestureRecognizers>
            <ItemsRepeater ItemsSource="{Binding SteamApps}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout
                        ItemsJustification="Start"
                        ItemsStretch="Uniform"
                        MinColumnSpacing="10"
                        MinRowSpacing="10" />
                    <!--<WrapLayout
                        HorizontalSpacing="10"
                        Orientation="Horizontal"
                        VerticalSpacing="10" />-->
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate DataType="scmd:SteamApp">
                        <Border spp:Animations.EnableAnimations="False">
                            <spp:AppItem
                                Title="{Binding DisplayName}"
                                Height="340"
                                MinWidth="128"
                                MaxWidth="169"
                                Classes="Vertical">
                                <spp:AppItem.Status>
                                    <Border Classes="Status">
                                        <TextBlock Text="{Binding AppId}" />
                                    </Border>
                                </spp:AppItem.Status>
                                <spp:AppItem.MoreFlyout>
                                    <ui:FAMenuFlyout Placement="BottomEdgeAlignedRight">
                                        <ui:MenuFlyoutItem Text="112323" />
                                    </ui:FAMenuFlyout>
                                </spp:AppItem.MoreFlyout>
                                <spp:AppItem.Image>
                                    <Panel MinWidth="{ReflectionBinding $parent[spp:AppItem].MinWidth}" MaxWidth="{ReflectionBinding $parent[spp:AppItem].MaxWidth}">
                                        <spp:Image2
                                            Name="AppImage"
                                            DecodeWidth="169"
                                            FallbackSource="avares://BD.WTTS.Client.Plugins.GameList/UI/Assets/defaultappimage.png"
                                            RenderOptions.BitmapInterpolationMode="HighQuality"
                                            Source="{Binding LibraryGridUrl}"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="8,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                            IsVisible="{ReflectionBinding #AppImage.IsFailed}"
                                            Text="{Binding DisplayName}"
                                            TextAlignment="Center"
                                            TextWrapping="WrapWithOverflow"
                                            Theme="{StaticResource BodyStrongTextBlockStyle}" />

                                        <Border
                                            Margin="10,0,10,-3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Background="#3D4450"
                                            CornerRadius="3"
                                            IsVisible="{Binding IsInstalled}">
                                            <DockPanel Margin="10,3" HorizontalAlignment="Center">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="11"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsVisible="{Binding InstalledDrive, Converter={StaticResource IsNullConverter}, ConverterParameter=invert}"
                                                    Text="{Binding InstalledDrive}" />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="11"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    Text="{Binding SizeOnDisk, Converter={StaticResource StringFormatConverter}, ConverterParameter=size}"
                                                    TextWrapping="Wrap" />
                                            </DockPanel>
                                        </Border>
                                    </Panel>
                                </spp:AppItem.Image>
                            </spp:AppItem>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

        </spp:ContentLoader>
    </DockPanel>
</spp:PageBase>
