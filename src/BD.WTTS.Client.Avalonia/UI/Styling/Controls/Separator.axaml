<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:CompileBindings="True">
    <Design.PreviewWith>
        <Border MinWidth="200" Padding="20">
            <Separator Width="100" Classes="Horizontal" />
        </Border>
    </Design.PreviewWith>

    <Style Selector="Separator">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border
                    Height="{TemplateBinding Height}"
                    Padding="{TemplateBinding Margin}"
                    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                    VerticalAlignment="{TemplateBinding VerticalAlignment}"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding CornerRadius}" />
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="Separator.Horizontal">
        <Setter Property="Height" Value="0.88" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <Style Selector="Separator.Vertical">
        <Setter Property="Width" Value="0.88" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>
</Styles>
