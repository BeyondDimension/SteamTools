<UserControl
    x:Class="BD.WTTS.UI.Views.Pages.IdleSteamLoginPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://steampp.net/services"
    xmlns:spp="https://steampp.net/ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="spp:IdleSteamLoginPageViewModel"
    mc:Ignorable="d">
    <spp:ContentLoader CustomLoadingText="{Binding Path=Res.EnableAccelerationPrompt, Mode=OneWay, Source={x:Static spp:Strings.EnableAccelerationPrompt}}" IsLoading="{Binding IsLoading}">
        <Panel IsVisible="{Binding !IsLoading}">
            <!--  登录  -->
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">
                <StackPanel.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                        <CompiledBinding Path="!Requires2FA" />
                        <CompiledBinding Path="!RequiresEmailAuth" />
                        <CompiledBinding Path="!IsLoading" />
                    </MultiBinding>
                </StackPanel.IsVisible>
                <PathIcon
                    Width="88"
                    Height="88"
                    Data="{StaticResource Steam}" />
                <TextBox
                    MaxWidth="280"
                    Text="{Binding UserNameText}"
                    Watermark="{Binding Path=Res.Steam_User, Mode=OneWay, Source={x:Static spp:Strings.Steam_User}}" />
                <TextBox
                    Name="PasswordText"
                    MaxWidth="280"
                    Classes="revealPasswordButton"
                    PasswordChar="{StaticResource PasswordChar}"
                    Text="{Binding PasswordText}"
                    Watermark="{Binding Path=Res.Steam_Password, Mode=OneWay, Source={x:Static spp:Strings.Steam_Password}}" />
                <CheckBox Content="{ReflectionBinding Path=Res.User_Rememberme, Mode=OneWay, Source={x:Static spp:Strings.User_Rememberme}}" IsChecked="{Binding RemenberLogin}" />

                <Button
                    MinWidth="280"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Command="{Binding Login}"
                    Content="{Binding Path=Res.Login, Mode=OneWay, Source={x:Static spp:Strings.Login}}" />
            </StackPanel>

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">
                <StackPanel.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.Or}">
                        <CompiledBinding Path="Requires2FA" />
                        <CompiledBinding Path="RequiresEmailAuth" />
                    </MultiBinding>
                </StackPanel.IsVisible>
                <TextBlock IsVisible="{Binding Requires2FA}" Text="{Binding Path=Res.LocalAuth_Steam2FACodeTip, Mode=OneWay, Source={x:Static spp:Strings.LocalAuth_Steam2FACodeTip}}" />
                <TextBlock IsVisible="{Binding RequiresEmailAuth}" Text="{Binding Path=Res.LocalAuth_EmailCodeTip, Mode=OneWay, Source={x:Static spp:Strings.LocalAuth_EmailCodeTip}}" />
                <TextBox
                    FontSize="22"
                    Text="{Binding TwofactorCode, Mode=TwoWay}"
                    TextAlignment="Center" />

                <Button
                    MinWidth="280"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Command="{Binding Login}"
                    Content="{Binding Path=Res.Btn_Text_Continue, Mode=OneWay, Source={x:Static spp:Strings.Btn_Text_Continue}}" />
            </StackPanel>
        </Panel>
    </spp:ContentLoader>
</UserControl>
